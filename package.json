{
  "name": "circle-distribution",
  "version": "0.0.1",
  "description": "Circles distribution assistant for React application",
  "main": "dist/index.js",
  "author": "daremove",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/daremove/circle-distribution.git"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "tsc-check": "tsc --noEmit --project tsconfig.json",
    "tslint-check": "tslint --project tsconfig.json",
    "tslint-fix": "tslint --project tsconfig.json --fix",
    "prettier-check": "prettier --ignore-path ./.prettierignore --check \"./core/**/*.ts\"",
    "prettier-fix": "prettier --ignore-path ./.prettierignore --write \"./core/**/*.ts\"",
    "lint": "npm run tsc-check && npm run tslint-check && npm run prettier-check",
    "lint-fix": "npm run tslint-fix && npm run prettier-fix"
  },
  "peerDependencies": {
    "react": "",
    "react-dom": ""
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "ts-node": "8.3.0",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest"
  }
